<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Guess3CheckWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="15dp"
        android:width="70sp"

        android:textAlignment="textEnd"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/Word"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.164" />

    <TextView
        android:id="@+id/Guess1Word"
        android:layout_width="81dp"
        android:layout_height="34dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="15dp"

        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/Guess1CheckWord"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Guess1CheckWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="15dp"
        android:width="70sp"

        android:textAlignment="textEnd"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/Guess2Word"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Guess3Check"
        android:layout_width="152dp"
        android:layout_height="56dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="260dp"
        android:layout_marginBottom="5dp"
        android:text="Guess # 3 Check"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/Word"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.139" />

    <TextView
        android:id="@+id/Guess1"
        android:layout_width="150dp"
        android:layout_height="38dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="5dp"
        android:text="Guess # 1"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/Guess1Check"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewGuess2"
        android:layout_width="158dp"
        android:layout_height="38dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="5dp"
        android:text="Guess # 2"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/Guess2Check"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Guess3Word"
        android:layout_width="71dp"
        android:layout_height="38dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="15dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/Guess3CheckWord"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Guess3"
        android:layout_width="152dp"
        android:layout_height="54dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="220dp"
        android:layout_marginBottom="5dp"
        android:text="Guess # 3"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/Guess3Check"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Guess2Word"
        android:layout_width="83dp"
        android:layout_height="44dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="15dp"

        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/Guess2CheckWord"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/Guess1Check"
        android:layout_width="161dp"
        android:layout_height="43dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="5dp"
        android:text="Guess # 1 Check"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewGuess2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Guess2CheckWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="15dp"
        android:width="70sp"

        android:textAlignment="textEnd"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/Guess3Word"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/Guess2Check"
        android:layout_width="153dp"
        android:layout_height="40dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="5dp"
        android:text="Guess # 2 Check"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/Guess3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Word"
        android:layout_width="190dp"
        android:layout_height="63dp"
        android:text="Word"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.701"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.651" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="84dp"
        android:width="200dp"
        android:hint="Enter a 4 letter Word Here :)"
        android:maxLength="4"
        android:minHeight="48dp"
        android:text=""
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="88dp"
        android:text="Enter"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>